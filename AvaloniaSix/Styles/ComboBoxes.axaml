<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20" Background="{DynamicResource PrimaryBackgroundGradient}"
            Width="600">
      <!-- Add Controls for Previewer Here -->
      <StackPanel Spacing="12">
        <!--Label with icon will curse render incorrectly in previewer-->
        <ComboBox>
          <ComboBoxItem Content="ComboBox Item1"/>
          <ComboBoxItem Content="ComboBox Item2"/>
          <ComboBoxItem Content="ComboBox Item3 with long text, how does it will be previewer?"/>
          <ComboBoxItem Content="ComboBox Item4"/>
        </ComboBox>
      </StackPanel>
    </Border>
  </Design.PreviewWith>

  <!-- Add Styles Here -->
  <Style Selector="ComboBox">
    <!--<Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"/>-->
  </Style>
  <Style Selector="ComboBox">
    <Setter Property="Margin" Value="0 10"/>
    <Setter Property="Padding" Value="0 10"/>
    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBackgroundGradient}"/>
    <Setter Property="BorderThickness" Value="3"/>
    <Setter Property="Background" Value="{DynamicResource PrimaryBackground}"/>
  </Style>
</Styles>
