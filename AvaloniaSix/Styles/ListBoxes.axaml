<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Design.PreviewWith>
		<Border Padding="20" Background="{DynamicResource PrimaryBackgroundGradient}"
				Width="600">
			<!-- Add Controls for Previewer Here -->
			<StackPanel Spacing="12">
				<!--Label with icon will curse render incorrectly in previewer-->
				<ListBox>
					<ListBoxItem Content="ListBox Item1"/>
					<ListBoxItem Content="ListBox Item2"/>
					<ListBoxItem Content="ListBox Item3 with long text, how does it will be previewer?"/>
					<ListBoxItem Content="ListBox Item4"/>
				</ListBox>
			</StackPanel>
		</Border>
	</Design.PreviewWith>

	<!-- Add Styles Here -->
	<Style Selector="ListBox">
		<Setter Property="Background" Value="{DynamicResource PrimaryBackgroundGradient}"/>
		<Setter Property="BorderBrush" Value="{DynamicResource DefaultGradient}"/>
		<Setter Property="BorderThickness" Value="{DynamicResource PrimaryBorderThickness}"/>
		<Setter Property="CornerRadius" Value="3"/>
		<Setter Property="Foreground" Value="{DynamicResource PrimaryForeground}"/>
	</Style>

	<Style Selector="ListBoxItem:pointerover">
		<Setter Property="BorderBrush" Value="{DynamicResource HoverGradient}"></Setter>
	</Style>
</Styles>
