<Application x:Class="AvaloniaSix.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AvaloniaSix"
    RequestedThemeVariant="Default">
  <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

  <Application.DataTemplates>
    <local:ViewLocator />
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme />
    <StyleInclude Source="Styles/Buttons.axaml" />
    <StyleInclude Source="Styles/ComboBoxes.axaml" />
    <StyleInclude Source="Styles/General.axaml" />
    <StyleInclude Source="Styles/Labels.axaml" />
    <StyleInclude Source="Styles/ListBoxes.axaml" />
    <StyleInclude Source="Styles/TextBlocks.axaml" />
    <StyleInclude Source="Styles/TextBoxes.axaml" />
  </Application.Styles>

  <Application.Resources>

    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <MergeResourceInclude Source="Controls/IconButton.axaml" />
        <MergeResourceInclude Source="Controls/CheckBox.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>

    <SolidColorBrush x:Key="PrimaryForeground">#CFCFCF</SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryBackground">#14172D</SolidColorBrush>
    <LinearGradientBrush x:Key="PrimaryBackgroundGradient" StartPoint="0%,0%" EndPoint="100%,0%">
      <GradientStop Offset="0" Color="#111214" />
      <GradientStop Offset="1" Color="#151e3e" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="PrimaryHoverBackground">#333B5A</SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryActiveBackground">#6633dd</SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryHoverForeground">White</SolidColorBrush>

    <LinearGradientBrush x:Key="PrimaryButtonBackgroundGradient" StartPoint="0%,0%" EndPoint="100%,0%">
      <GradientStop Offset="0" Color="#00ffff" />
      <GradientStop Offset="1" Color="#ff00ff" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryButtonHoverGradient" StartPoint="0%,0%" EndPoint="100%,0%">
      <GradientStop Offset="0" Color="#00ffff" />
      <GradientStop Offset="1" Color="#00ffff" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="OutlineButtonForeground">#00ffff</SolidColorBrush>

    <LinearGradientBrush x:Key="DefaultGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
      <GradientStop Offset="0" Color="#333B5A"></GradientStop>
      <GradientStop Offset="1" Color="#333B5A"></GradientStop>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ActiveGradientText" StartPoint="0%, 0%" EndPoint="100%, 0%">
      <GradientStop Offset="0" Color="#7C59CD"></GradientStop>
      <GradientStop Offset="1" Color="#7C59CD"></GradientStop>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ActiveGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
      <GradientStop Offset="0" Color="#6633DD"></GradientStop>
      <GradientStop Offset="1" Color="#431B9F"></GradientStop>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="ActiveHoverGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
      <GradientStop Offset="0" Color="#6633DD"></GradientStop>
      <GradientStop Offset="1" Color="#6633DD"></GradientStop>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HoverGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
      <GradientStop Offset="0" Color="#00ffff"></GradientStop>
      <GradientStop Offset="1" Color="#ff00ff"></GradientStop>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
      <GradientStop Offset="0" Color="#00ff00"></GradientStop>
      <GradientStop Offset="1" Color="#009900"></GradientStop>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SuccessHoverGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
      <GradientStop Offset="0" Color="#44ff44"></GradientStop>
      <GradientStop Offset="1" Color="#55cc55"></GradientStop>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="AlertButtonBackgroundGradient" StartPoint="0%,0%" EndPoint="100%,0%">
      <GradientStop Offset="0" Color="#ffff00" />
      <GradientStop Offset="1" Color="#ff8800" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AlertButtonHoverBackground" StartPoint="0%,0%" EndPoint="100%,0%">
      <GradientStop Offset="0" Color="#ffff00" />
      <GradientStop Offset="1" Color="#ffff00" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DangerGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
      <GradientStop Offset="0" Color="#ff0000"></GradientStop>
      <GradientStop Offset="1" Color="#aa0000"></GradientStop>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="DangerHoverGradient" StartPoint="0%, 0%" EndPoint="100%, 0%">
      <GradientStop Offset="0" Color="#ff4444"></GradientStop>
      <GradientStop Offset="1" Color="#bb1111"></GradientStop>
    </LinearGradientBrush>
    
    <FontFamily x:Key="Nerd">avares://AvaloniaSix/Assets/Fonts/0xProtoNerdFont-Regular.ttf#0xProto Nerd Font</FontFamily>
    <FontFamily x:Key="NerdBold">avares://AvaloniaSix/Assets/Fonts/0xProtoNerdFont-Bold.ttf#0xProto Nerd Font</FontFamily>
    <FontFamily x:Key="Phosphor">avares://AvaloniaSix/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
    <FontFamily x:Key="PhosphorFill">avares://AvaloniaSix/Assets/Fonts/Phosphor-Fill.ttf#Phosphor-Fill</FontFamily>
    <FontFamily x:Key="Nunito">avares://AvaloniaSix/Assets/Fonts#Nunito</FontFamily>

  </Application.Resources>
</Application>
