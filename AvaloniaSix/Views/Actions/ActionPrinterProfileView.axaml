<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 MinWidth="450" MinHeight="150"
			 xmlns:vm="using:AvaloniaSix.ViewModels"
			 x:DataType="vm:ActionPrinterProfileViewModel"
			 Width="{Binding DialogWidth}"
			 Height="{Binding DialogHeight}"
			 Foreground="{DynamicResource PrimaryForeground}"
			 Background="{DynamicResource PrimaryBackground}"
			 x:Class="AvaloniaSix.Views.ActionPrinterProfileView">

	<Design.DataContext>
		<vm:ActionPrinterProfileViewModel/>
	</Design.DataContext>

	<Border CornerRadius="20" ClipToBounds="True" Margin="10"
			Background="{DynamicResource PrimaryBackground}"
			BorderBrush="{DynamicResource DefaultGradient}"
			BorderThickness="{DynamicResource PrimaryBorderThickness}">
		<Border.Effect>
			<DropShadowEffect Color="{DynamicResource PrimaryBackgroundColor2}"/>
		</Border.Effect>

		<Grid RowDefinitions="Auto,*">
			<!--Title-->
			<Border Grid.Row="0" Background="{DynamicResource PrimaryBackgroundGradient}" CornerRadius="20 0">
				<TextBlock Text="{Binding Title}" Padding="10" FontWeight="Bold" FontSize="18" TextWrapping="Wrap"/>
			</Border>

			<Grid Grid.Row="1" RowDefinitions="Auto,Auto,Auto,*,Auto" Margin="20">
				<!--Message:-->
				<StackPanel Grid.Row="0" Orientation="Horizontal">
					<Label Classes="icon" Content="{Binding IconText}" />
					<TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
				</StackPanel>

				<Grid Grid.Row="1" ColumnDefinitions="Auto,10,*" RowDefinitions="Auto,10,Auto" Margin="0 10">
					<Label Grid.Column="0" Grid.Row="0" Content="Name" VerticalAlignment="Center"/>
					<TextBox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" Width="300"
							 Text="{Binding Name}"/>
					<Label Grid.Column="0" Grid.Row="2" Content="Description" VerticalAlignment="Center"/>
					<TextBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Width="300"
							 Text="{Binding Description}"/>
				</Grid>

				<!--Tips-->
				<TextBlock Grid.Row="2" Text="{Binding StatusText}" Foreground="{DynamicResource AlertGradient}"
						   HorizontalAlignment="Right" TextWrapping="Wrap" Margin="0 10"/>

				<!--Buttons-->
				<Grid Grid.Row="3"
					  ColumnDefinitions="Auto,*,10,Auto,10,Auto"
					  VerticalAlignment="Bottom">

					<StackPanel Grid.Column="0" Spacing="10" Orientation="Horizontal" VerticalAlignment="Center">
						<Label Content="Copies"/>
						<NumericUpDown FormatString="0" Minimum="1" Maximum="999" Width="140"
									   Value="{Binding Copies}"/>
					</StackPanel>

					<Button Grid.Column="3" Classes="success outline" MinWidth="70" HorizontalContentAlignment="Center"
							Content="{Binding CancelText}"
							IsVisible="{Binding !IsBusy}"
							Command="{Binding CancelCommand}" />
					<Button Grid.Column="5" Classes="danger outline" MinWidth="70" HorizontalContentAlignment="Center"
							Content="{Binding ConfirmText}"
							IsVisible="{Binding !IsBusy}"
							Command="{Binding ConfirmCommand}"/>
				</Grid>

				<!--Progress Text-->
				<TextBlock Grid.Row="3" Text="{Binding ProgressText}" Foreground="{DynamicResource AlertGradient}"
						   IsVisible="{Binding IsBusy}" Margin="0 10"
						   HorizontalAlignment="Right" TextAlignment="Right" TextWrapping="Wrap"/>
			</Grid>

		</Grid>
	</Border>

</UserControl>
