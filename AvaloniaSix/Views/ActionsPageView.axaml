<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AvaloniaSix.ViewModels"
			 xmlns:view="using:AvaloniaSix.Views"
			 mc:Ignorable="d" d:DesignWidth="1100" d:DesignHeight="900"
			 Background="{DynamicResource PrimaryBackground}"
			 Foreground="{DynamicResource PrimaryForeground}"
			 x:Class="AvaloniaSix.Views.ActionsPageView"
			 x:DataType="vm:ActionsPageViewModel"
			 >
	<Design.DataContext>
		<vm:ActionsPageViewModel/>
	</Design.DataContext>

	<Grid ColumnDefinitions="*" RowDefinitions="Auto,*">
		<Grid Name="HeaderGrid">
			<StackPanel Height="100" ClipToBounds="True">
				<Image Source="{SvgImage /Assets/Images/background-actions.svg}" Stretch="UniformToFill" />
			</StackPanel>
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<Label Classes="h1" HorizontalAlignment="Center" Content="Actions" />
				<Label Classes="sub2" HorizontalAlignment="Center"
					   Content="Create and manage all actions that can be used in a process" />
			</StackPanel>
		</Grid>

		<Border Grid.Row="1" Padding="0 15 0 0">
			<TabControl Name="ActionsTabControl" SelectionChanged="ActionTab_SelectionChanged">
				<TabItem Header="Print" IsSelected="True">
					<view:ActionPrintView/>
				</TabItem>
				<TabItem Header="Custom Properties">
					local:ActionCustomPropertiesView/>
				</TabItem>
				<TabItem Header="File Info">
					local:ActionFileInfoView />
				</TabItem>
				<TabItem Header="Save Model As">
					local:ActionSaveModelView />
				</TabItem>
				<TabItem Header="Save Drawing As">
					local:ActionSaveDrawingView />
				</TabItem>
				<TabItem Header="Import File">
					local:ActionImportFileView />
				</TabItem>
				<TabItem Header="Drawing Templates">
					local:ActionDrawingTemplateView />
				</TabItem>
				<TabItem Header="Macros">
					local:ActionMacrosView />
				</TabItem>
			</TabControl>
		</Border>

	</Grid>
</UserControl>
