<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:view="clr-namespace:AvaloniaSix.Views"
			 xmlns:vm="clr-namespace:AvaloniaSix.ViewModels"
			 Width="1400"
			 Height="800"
			 MinWidth="1400"
			 MinHeight="800"
			 d:DesignHeight="800"
			 d:DesignWidth="1400"
			 x:DataType="vm:MainViewModel"
			 x:Class="AvaloniaSix.Views.MainView">
	
  <Design.DataContext>
    <vm:MainViewModel />
  </Design.DataContext>

	<Grid Background="{DynamicResource PrimaryBackground}" ColumnDefinitions="Auto,*">

		<Border Padding="20" Background="{DynamicResource PrimaryBackgroundGradient}">
			<Grid RowDefinitions="*,Auto">

				<StackPanel Spacing="12">
					<!--<Image PointerPressed="Image_PointerPressed" Source="{Binding SideMenuImg}" Width="220" />-->
					<Image Width="220"
						   IsVisible="{Binding SideMenuExpanded}"
						   PointerPressed="Image_PointerPressed"
						   Source="{SvgImage /Assets/Images/banner.svg}" />
					<Image Width="22"
						   IsVisible="{Binding !SideMenuExpanded}"
						   PointerPressed="Image_PointerPressed"
						   Source="{SvgImage /Assets/Images/logo.svg}" />

					<IconButton HorizontalAlignment="Stretch"
								Classes="subtle"
								Classes.active="{Binding IsHomePage}"
								Command="{Binding GoToHomeCommand}"
								IconText="&#xe2c2;">
						<Label Content="Home" IsVisible="{Binding SideMenuExpanded}" />
					</IconButton>
					<IconButton HorizontalAlignment="Stretch"
								Classes="subtle"
								Classes.active="{Binding IsProcessPage}"
								Command="{Binding GoToProcessCommand}"
								IconText="&#xe610;">
						<Label Content="Process" IsVisible="{Binding SideMenuExpanded}" />
					</IconButton>
					<IconButton HorizontalAlignment="Stretch"
								Classes="subtle"
								Classes.active="{Binding IsActionsPage}"
								Command="{Binding GoToActionsCommand}"
								IconText="&#xe7f2;">
						<Label Content="Actions" IsVisible="{Binding SideMenuExpanded}" />
					</IconButton>
					<IconButton HorizontalAlignment="Stretch"
								Classes="subtle"
								Classes.active="{Binding IsMacrosPage}"
								Command="{Binding GoToMacrosCommand}"
								IconText="&#xe3ee;">
						<Label Content="Macros" IsVisible="{Binding SideMenuExpanded}" />
					</IconButton>
					<IconButton HorizontalAlignment="Stretch"
								Classes="subtle"
								Classes.active="{Binding IsReporterPage}"
								Command="{Binding GoToReporterCommand}"
								IconText="&#xe344;">
						<Label Content="Reporter" IsVisible="{Binding SideMenuExpanded}" />
					</IconButton>
					<IconButton HorizontalAlignment="Stretch"
								Classes="subtle"
								Classes.active="{Binding IsHistoryPage}"
								Command="{Binding GoToHistoryCommand}"
								IconText="&#xe03a;">
						<Label Content="History" IsVisible="{Binding SideMenuExpanded}" />
					</IconButton>
				</StackPanel>

				<!-- <IconButton HorizontalAlignment="Stretch"
				Classes="transparent" Grid.Row="1"
				Command="{Binding GoToSettingsCommand}"
				IconText="&#xe272;">
				</IconButton> -->

				<Button Grid.Row="1" Classes="transparent"
						Classes.active="{Binding IsSettingsPage}"
						Command="{Binding GoToSettingsCommand}">
					<StackPanel Orientation="Horizontal">
						<Label Classes="icon-only" Content="&#xe272;" />
					</StackPanel>
				</Button>
			</Grid>
		</Border>

		<ContentControl Grid.Column="1" Content="{Binding CurrentPage}" />
	</Grid>

</UserControl>
